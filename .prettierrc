{
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "parser": "typescript",
  "printWidth": 120,
  "tabWidth": 2,
  "useTabs": true,
  "semi": true,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "auto",
  "importOrder": [
    "^react(.*)",
    "^@tanstack/(.*)$",
    "^axios(.*)",
    "^@/shared/pages/(.*)$",
    "^@/shared/components/(.*)$",
    "^@/shared/hooks/(.*)$",
    "^@/shared/apis/(.*)$",
    "^@/shared/utils/(.*)$",
    "^@/shared/router/(.*)$",
    "^@/shared/types/(.*)$",
    "^@/shared/constants/(.*)$",
    "^@/shared/assets/(.*)$",
    "^@/router/(.*)$",
    "^@/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,

  "overrides": [
    {
      "files": "*.yml",
      "options": {
        "parser": "yaml"
      }
    }]
}
